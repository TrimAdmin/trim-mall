{
  "name": "trim-mall",
  "version": "1.0.0",
  "description": "A mall written with nest, vue and uniapp",
  "type": "module",
  "scripts": {
    "dev:h5": "pnpm -C trim-mall-app dev:h5",
    "dev:server": "pnpm -C trim-mall-server start:debug",
    "prepare": "husky",
    "lint": "pnpm lint:code && pnpm lint:style && pnpm prettier",
    "lint:code": "eslint **/*.{js,ts,jsx,tsx,vue} --fix --cache --max-warnings 4096",
    "prettier": "prettier **/* --write --ignore-unknown",
    "lint:style": "stylelint **/*.{html,vue,css,sass,scss} --fix --mw 4096",
    "commitlint": "commitlint --edit"
  },
  "workspaces": [
    "server"
  ],
  "keywords": [
    "mall",
    "nest",
    "vue",
    "uniapp",
    "wxminiprogram"
  ],
  "author": {
    "name": "ducheng1",
    "email": "w729567588@163.com"
  },
  "repository": {
    "url": "https://github.com/TrimAdmin/trim-mall"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/format": "^19.0.3",
    "@commitlint/types": "^19.0.3",
    "@eslint/js": "^8.57.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-clean-order": "^5.4.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.4.0",
    "vitest": "^1.4.0",
    "vue-eslint-parser": "^9.4.2"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,vue}": [
      "pnpm lint:code",
      "pnpm prettier"
    ],
    "**/*.{css,scss,sass,vue,html}": [
      "pnpm lint:style",
      "pnpm prettier"
    ]
  }
}
